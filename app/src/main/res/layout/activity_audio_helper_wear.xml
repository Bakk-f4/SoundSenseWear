<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.DismissibleFrameLayout
    android:id="@+id/activity_audio_helper_dismiss_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/bttSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#00FFFFFF"
        android:onClick="onGoToSettingsWear"
        android:src="@drawable/ic_action_name" />

    <TextView
        android:id="@+id/tvAudioOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70sp"
        android:text="SoundSense"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bttStartRecording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="110dp"
        android:onClick="startRecordingL"
        android:text="Start"
        app:cornerRadius="30dp" />

    <Button
        android:id="@+id/bttStopRecording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:onClick="stopRecordingL"
        android:text="Stop"
        app:cornerRadius="30dp" />

</androidx.wear.widget.DismissibleFrameLayout>