<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.DismissibleFrameLayout
    android:id="@+id/activity_audio_helper_dismiss_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/bttSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_margin="8dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="onGoToSettings"
        android:src="@drawable/ic_action_name" />

    <TextView
        android:id="@+id/tvAudioOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80sp"
        android:text="SoundSense" />

    <Button
        android:id="@+id/bttStartRecording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="6sp"
        android:onClick="startRecording"
        android:text="Start" />

    <Button
        android:id="@+id/bttStopRecording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="6sp"
        android:onClick="stopRecording"
        android:text="Stop" />

</androidx.wear.widget.DismissibleFrameLayout>